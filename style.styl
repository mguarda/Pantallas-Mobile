plomo = #CCCCCC
azul = #156FEA
gris= #666666
gris_azulino = #3E4E5F


body
    padding: 5px
    background-color: #B5D31C
    font-size: 16px
    font-family: 'PT Sans Narrow', sans-serif
    background url(fondo.jpg) no-repeat center center fixed

.cuadro-titulo
    background-color: #157CF5
    border: 1px solid gris_azulino
    margin-bottom: 3px
    margin-top: 10px
    text-decoration: none !important
    width 100%
    box-shadow 0 2px 2px gris_azulino

    .titulo-cuadro
        color #FFFFFF !important
        display inline-block
        font-size 22px
        vertical-align middle
        margin-left 7px
        padding-top 5px
        padding-bottom 5px
        
        &:before
            content "\e606"
            display inline-block
            font-size 1.5rem
            font-family "icomoon"
            margin 0 5px 0 0
            vertical-align bottom

    .flecha
        color #FFFFFF !important
        background-color #157CF5
        border-left 1px solid black
        float right
        padding 6px 5px 5px 7px
        &:after
            content "\e602"
            display inline-block
            font-size 25px
            font-family "icomoon"
            margin 0 0 0 0


.contenido
    background-color: #FFFFFF
    border: 1px solid gris_azulino
    box-shadow 0 2px 2px gris_azulino
    font-size: 16px
    width 100%
    margin-bottom 20px
    
    .titulo1
        background-color: #FFFFFF
        color: #545454
        font-size: 18px
        padding-bottom: 10px
        padding-left: 5px
        padding-top: 5px
        text-align: left
        vertical-align: middle

        &:before
            content "\e600"
            display inline-block
            font-size 25px
            color gris
            font-family "icomoon"
            margin 0 0 0 5px
            vertical-align bottom

    .indicadores
        height: 100%
        text-align: center
        width: 100%
      
        .ind
            background-color: #F0F0F0
            display: inline-block
            margin-bottom: 1px
            width: 48.5%
            overflow hidden
            height 88px

            .titulo2
                color: #2E82DD
                font-size: 15px
                padding-left: 10px
                padding: 5px
                text-align: left
                width: 100%
                font-weight bold

            .ind_vs
                color: #565656
                display: inline-block
                font-size: 30px
                margin-bottom: 15px
                padding-left: 10px
                text-align: left
                width: calc(70% - 10px)

            .percent
                color: #2E82DD
                display: inline-block
                font-weight bold
                padding-bottom: 3px
                padding-right: 5px
                vertical-align: bottom
                width: calc(30% - 10px)

            .tabla_carga
                height 5px
                margin 0
                padding 0
                border none
                width 100%
                position relative

                .tabla_incompleto
                    background-color plomo
                    border none
                    display inline-block
                    float left
                    height 5px
                    margin 0
                    padding 0
                    width calc(100% - 38.7%)

                .tabla_completo
                    background-color azul
                    border none
                    display inline-block
                    float left
                    height 5px
                    margin 0
                    padding 0
                    width calc(38.7%)